import 'package:flutter/material.dart';
import 'package:qr_flutter/qr_flutter.dart'; // Import the QR code package

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: QRCodePage(),
    );
  }
}

class QRCodePage extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    // Sample data to encode in the QR code
    String data = "https://flutter.dev"; // You can change this to any string you want
    'data' = return(body)

    return Scaffold(
      appBar: AppBar(
        title: Text("QR Code Generator"),
      ),
      body: Center(
        child: QrImage(
          data: data,   // The data to encode in the QR code
          version: QrVersions.auto,  // Set to auto or specify version
          size: 200.0,  // Size of the QR code
          gapless: false,  // Optional: whether to have a gapless rendering
        ),
      ),
    );
  }
}
